<h1>Clubes</h1>
<hr>
<form action="/clube/save" method="post">
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Nome:</label>
        <div class="col-sm-10">
            <input type="text" name="nome" class="form-control" />
        </div>
    </div>
    <label>Status</label>
    <input type="checkbox" name="status" checked>
    <br>
    <br>
    <div class="mb-3 row align-self-end">
        <input type="submit" class="btn btn-outline-success" value="Cadastrar">
    </div>
</form>

<hr>
<h2>Lista de Clubes</h2>
<div class="table-responsive">
<table class="table table-striped table-sm">
    <thead>
            <tr>
              <th scope="col">Id Clube</th>
              <th scope="col">Nome do Clube</th>
              <th scope="col">Status do Clube</th>
              <th scope="col">Ações</th>
            </tr>
    </thead>
    <tbody>
    {{#each clubes}}
    <tr>
        <td>{{this.id}}</td>
        <td>{{this.nome}}</td>
        <td>{{#if this.status}}Ativo{{else}}Inativo{{/if}}</td>
        <td> 
            <a href="/clube/{{this.id}}">Exibir Detalhes</a> |
            <a href="/clube/edit/{{this.id}}">Editar</a> |
            <a href="/clube/delete/{{this.id}}">Excluir</a>
        </td>

    </tr>
    {{/each}}
    </tbody>
</table>
</div>

