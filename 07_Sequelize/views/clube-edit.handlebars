<h2>Editando o clube: {{clube.nome}}</h2>

<form action="/clube/edit/save" method="post" class="d-flex flex-column">
    <input type="hidden" name="id" value="{{clube.id}}" class="form-control" />
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Nome:</label>
        <div class="col-sm-10">
            <input type="text" name="nome" value="{{clube.nome}}" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Status:</label>
        <div class="col-sm-10">
            {{#if clube.status}}
            <input type="checkbox" name="status" placeholder="" checked />
            {{else}}
            <input type="checkbox" name="status"/>
            {{/if}}
        </div>
    </div>
    <div class="mb-3 row align-self-end">
        <input type="submit" class="btn btn-outline-success" value="Atualizar">
    </div>
</form>
<hr>
<a class="btn btn-primary" href="/clubes" role="button">Voltar</a>
